<main>
  <section>
    <ul>
      <% @users.each do |user| %>
        <%= link_to user do %>
          <li>
            <div>
              <div>Border</div>
              <div>
                <h2><%= user.name %></h2>
                <p>Number of posts: <%= user.posts_counter %></p>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
</main>