<!DOCTYPE html>
<html>
  <head>
    <title>Bloggerly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= yield :page_styles %>
  </head>

  <body>
    <h1>Bloggerly</h1>    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div id="sign_out">
      <% if user_signed_in? %>
        <%= link_to current_user.name, user_posts_path(current_user) %>
        <%= button_to 'Edit your profile', edit_user_registration_path, method: :get %>
        <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= button_to "Log in", new_user_session_path %>
        <%= button_to 'Sign up', new_user_registration_path, method: :get %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
